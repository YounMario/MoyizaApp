<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_head"
        android:layout_width="@dimen/item_img_w_h"
        android:layout_height="@dimen/item_img_w_h"
        android:layout_margin="@dimen/common_margin"
        android:src="@drawable/user"
        app:civ_border_width="1dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/img_head"
        android:layout_toRightOf="@id/img_head"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_user_name"
            style="@style/item_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName" />

        <TextView
            android:id="@id/txt_user_moto"
            style="@style/item_sub_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_head"
            android:layout_marginTop="2dp"
            android:text="there is nothing" />
    </LinearLayout>
</RelativeLayout>
